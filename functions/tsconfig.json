{
  "compilerOptions": {
    "module": "ESNext",                   // Cambiado de NodeNext a ESNext
    "esModuleInterop": true,
    "moduleResolution": "Node",           // Cambiado de nodenext a Node
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",                   // Puede actualizarse a "ESNext" si es compatible
    "lib": ["esnext"]                     // Agregado para incluir las bibliotecas m√°s recientes
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
