{
  "compilerOptions": {
    "moduleResolution": "node",  
    "module": "CommonJS",                   // Cambiado de NodeNext a ESNext
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",                   // Puede actualizarse a "ESNext" si es compatible
    "lib": ["ES2020"]                     // Agregado para incluir las bibliotecas m√°s recientes
  },
  "compileOnSave": true,
  "include": [
    "src", // Incluye todos los archivos en src
    ".eslintrc.js" // Incluye el archivo .eslintrc.js
  ]
}
